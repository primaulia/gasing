<div class="container">
  <div class="media">
    <div class="media-left">
      <a href="{{ ownerGithub foundProject.github }}" target="_blank">
        <img class="media-object"
              src="{{ foundProject.user.github.avatar_url}}"
              alt="{{ foundProject.user.name }}"
              width="100">
      </a>
    </div>
    <div class="media-body">
      <h2>{{ foundProject.name }}</h2>
      <h4 class="media-heading">
        Created by
        <a href="{{ ownerGithub foundProject.github }}" target="_blank">
          {{ foundProject.user.name }}
        </a>
      </h4>
    </div>
  </div>

  {{#isOwner LOGGEDIN_USER foundProject.user}}
  <div class="help-block">
    <div class="row">
      <div class="col-md-12">
        <a href="#" class="btn btn-info btn-block">
          <i class="fa fa-eraser"></i> Edit
        </a>
      </div>
    </div>
    {{> projects/edit }}
  </div>
  {{/isOwner}}

