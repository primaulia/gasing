<div class="row">
  {{#each projects as |project|}}
  <div class="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">{{project.name}}</div>
      <div class="panel-body">
        <p>
          img preview of the repos - test<br>
          user: {{../LOGGEDIN_USER._id}}<br>
          project: {{project.user}}
        </p>

        <div class="btn-group btn-group-justified" role="group">
          <a href="{{project.github}}" class="btn btn-primary" role="button">Github</a>
          <a href="{{project.public}}" class="btn btn-info" role="button">Heroku</a>
        </div>

        {{#if ../LOGGEDIN_USER}}
          {{!-- {{#ifCond ../LOGGEDIN_USER._id project.user }} --}}
          {{!-- {{/ifCond}} --}}
        {{/if}}

        {{#isOwner ../LOGGEDIN_USER project.user}}
        <form method="POST" action="/projects/{{ project._id }}?_method=delete">
          <button class="btn btn-danger">Delete</button>
        </form>
        {{/isOwner}}
      </div>
    </div>
  </div>
  {{/each}}
</div>
